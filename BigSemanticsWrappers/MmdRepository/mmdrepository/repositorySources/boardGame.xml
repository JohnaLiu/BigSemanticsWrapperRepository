<meta_metadata_repository name="board_game" package="ecologylab.bigsemantics.generated.library.boardGame" default_user_agent_name="chrome_2">
                          
	<meta_metadata name="board_game" extends="creative_work" comment="The board game info class" >             
		<scalar name="number_of_players" label="players" scalar_type="String" />	
		<collection name="similar_games" child_type="board_game" />
		<collection name="categories" child_type="search_result" />	
	</meta_metadata>

	<meta_metadata name="bgg_game" extends="board_game" comment="boardgamegeek.com" parser="xpath">
        <selector url_path_tree="http://boardgamegeek.com/boardgame/"/>
		<example_url url="http://boardgamegeek.com/boardgame/4324/risk-the-lord-of-the-rings" />
                
        <scalar name="title" xpath="//*[@class='geekitem_title']/a/span" />	        
		<scalar name="number_of_players" xpath="//div[@id='edit_players']/div[2]" />	
		<scalar name="description" xpath="//div[@class='wiki']" />
		<scalar name="overall_rating" xpath="//*[@property='v:average']">
			<filter regex="$" replace=" out of 10" />
		</scalar>
		
		<collection name="categories" child_type="bgg_category" xpath="//a[contains(@href,'boardgamecategory/')]">	
			  <scalar name="title" xpath="." />
			  <scalar name="location" xpath="./@href" />	
		</collection>
	</meta_metadata>
	
	<meta_metadata name="bgg_category" extends="search_result" comment="boardgamegeek.com" parser="xpath">
        <selector url_path_tree="http://boardgamegeek.com/boardgamecategory/"/>
		<example_url url="http://boardgamegeek.com/boardgamecategory/1016/science-fiction" />
        
        <scalar name="title" xpath="//*[@class='geekitem_title']/a/span" />	  
                
        <collection name="search_results" child_type="bgg_game" xpath="//*[@class='geekitem_linkeditems_title']/a">
        	<scalar name="title" xpath="." />	  
        	<scalar name="location" xpath="./@href" />	 
        </collection>
	</meta_metadata>
	
</meta_metadata_repository>