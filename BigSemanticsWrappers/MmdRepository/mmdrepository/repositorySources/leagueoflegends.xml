<meta_metadata_repository name="leagueoflegends" package="ecologylab.bigsemantics.generated.library.leagueoflegends" default_user_agent_name="chrome_2">


<meta_metadata name="league_relationship_list" extends="compound_document" parser="xpath">
	<scalar name="title" label="relationship_type"/>
	<collection name="champions" child_type="league_champion"/>
</meta_metadata>

<meta_metadata name="league_ability" extends="compound_document" parser="xpath">
	<scalar name="title" label="ability_name"/>
	<scalar name="tooltip" scalar_type="String"/>
	<scalar name="cost" scalar_type="String"/>
	<scalar name="range" scalar_type="String"/>
	

</meta_metadata>

<meta_metadata name="league_champion" extends="compound_document" parser="xpath">
	<selector url_path_tree="http://gameinfo.na.leagueoflegends.com/en/game-info/champions/"/>
	
	<example_url url="http://gameinfo.na.leagueoflegends.com/en/game-info/champions/diana/"/>
	
	<scalar name="title" label="champion_name" xpath="//div[@id='champ_header']/h1"/>
	<scalar name="epithet" scalar_type="String" xpath="//div[@id='champ_header']/h3"/>
	<scalar name="description" label="lore" xpath="//div[@id='champion-lore']//div[@class='gs-container']/div[1]"/>
	
	<collection name="abilites" child_type="league_ability" xpath="(//div[@class='section-wrapper-content-wrapper'])[2]/div[@class='gs-container']//div[@class='gs-container']">
		<scalar name="title" xpath="./div[2]/h3"/>
		<scalar name="description" xpath="./div[3]/p[1]"/>
		<scalar name="tooltip" xpath="./div[3]/p[2]"/>
		<scalar name="cost" xpath="./div[2]/p/text()[2]"/>
		<scalar name="range" xpath="./div[2]/p/text()[4]"/>
		<composite name="image" xpath="./div[1]/span/img">
      		<scalar name="location" xpath="./@src" />
    	</composite>
		
	</collection>
	
	<collection name="relationships" child_type="league_relationship_list" xpath="//div[@id='lore-blocks']/div[@class='content-border']">
		<scalar name="title" xpath="./header/h3"/>
		<collection name="champions" xpath="./ul/li">
			<scalar name="title" xpath="./div/div/@data-rg-id"/>
			<scalar name="location" xpath="./div/span/a/@href"/>
		</collection>
	
	</collection>
	<composite name="champion_spotlight" type="youtube_video" xpath="//iframe[@width='450']">

		<scalar name="title" xpath="//div[@id='champ_header']/h1/text()" >
    		<filter regex="$" replace=" Champion Spotlight" />
   	 	</scalar>	
		<scalar name="location" xpath="./@src"/>
		
	</composite>
	<composite name="image" xpath="//div[@class='default-1-3']/img/@src">
      <scalar name="location" xpath="./@src" />
    </composite>
</meta_metadata>


</meta_metadata_repository>