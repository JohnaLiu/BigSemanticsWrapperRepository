    </collection>
    
    <collection name="people_also_viewed" child_type="target_product"
                xpath="//ul[@class='borderContainer']//div[@class='product-container']">
      <scalar name="location" xpath=".//p[@class='productLink-container']/a[@class='waRRtag']/@href" />
