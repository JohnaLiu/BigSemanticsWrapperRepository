<meta_metadata_repository name="review" package="ecologylab.bigsemantics.generated.library.review" default_user_agent_name="chrome_2">


	<meta_metadata name="tech_review" extends="compound_document" comment="Base tech review">
		 <scalar name="price" scalar_type="String" layer="3.0" style="topRight_div"
            schema_org_itemprop="price" />
          <scalar name="overall_rating" scalar_type="String"
            navigates_to="reviews_location" layer="2.0" style="underTopRight_div"
            schema_org_itemprop="aggregateRating" />
          <scalar name="publication_date" scalar_type="String"/>
	</meta_metadata>
	
		<meta_metadata name="anandtech_review" extends="tech_review" comment="anandtech.com review" parser="xpath">
		<selector url_path_tree="http://www.anandtech.com/print/" domain="anandtech.com" />
		<scalar name="title" xpath="//div[@class='blog_top_left']//h2/text()" />
		<scalar name="author" scalar_type="String" xpath="//*[@class='blog_top_left']/span/a[2]/text()"/>
		<scalar name="publication_date" xpath="//div[@class='blog_top_left']//span/em/text()"/> 
		
		<scalar name="price" xpath="(//*[@class='articleContent']//table)[1]/tbody/tr[last()]/td[2]/text()"/>
		
		<collection name="sections" child_type="document" xpath="//*[@class='articleContent']/h2[position()>1 and ((preceding-sibling::h2[1])[text()])]">
		<!-- Due to the common use of empty headers or headers that only contain whitespace to delineate
			 some sections, this collection will occasionally return 'conclusions' without 'headings' -->	
			<scalar name="title" label="heading" xpath="./preceding-sibling::h2[1]/text()"/>
			<scalar name="description" label="conclusion" xpath="preceding-sibling::p[1]/text()"/>
		 	
		</collection>
		
	    <collection name="specifications" child_type="document" xpath="(//*[@class='articleContent']//table)[1]/tbody/tr">
	    <!-- The first column of the first table usually has specs, but this is not guaranteed. -->
			<scalar name="title" label="spec" xpath="./td[1]/text()"/>
			<scalar name="description" label="detail" xpath="./td[2]/text()"/>
		</collection>
		
	</meta_metadata>
	
</meta_metadata_repository>
