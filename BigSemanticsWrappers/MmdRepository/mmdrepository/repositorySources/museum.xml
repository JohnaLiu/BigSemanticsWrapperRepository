<meta_metadata_repository name="museum" package="ecologylab.bigsemantics.generated.library.museum" default_user_agent_name="chrome_2">


<meta_metadata name="getty_info" extends="compound_document">

		<scalar name="author_name" scalar_type="String"/>
		<scalar name="dimensions" scalar_type="String"/>
		<scalar name="date_and_location" scalar_type="String"/>
		<scalar name="medium" scalar_type="String"/>
		<scalar name="dimensions" scalar_type="String"/>
		<scalar name="museum_code" scalar_type="String"/>
		
</meta_metadata>

<meta_metadata name="getty_object" extends="creative_work" parser="xpath">
	<selector url_path_tree="http://www.getty.edu/art/gettyguide/"/>
	<scalar name="title" xpath="//div[@class='header_redesign']/b"/>
	
	<composite name="image" xpath="//a[@class='art'][1]/img">
      <scalar name="location" xpath="./@src" />
    </composite>
	 <semantic_actions>
      <get_field name="image" />
      <if>
        <not_null value="image" />
          <create_and_visualize_img_surrogate>
            <arg name="metadata" value="image" />
          </create_and_visualize_img_surrogate>
      </if>
    </semantic_actions>
  
	
	<!--<scalar name="testing_field" scalar_type="String" xpath="//form[@name='bookmarkobj']/p[1]"/>
	-->
	<composite name="work_info" type="getty_info" xpath="//form[@name='bookmarkobj']/p[1]">
		
		<field_parser name="regex_find" regex="(.*)(\n.*)(\n.*)(\n.*)(\n.*)(\n.*)(\n.*)(\n.*)"/>
		<scalar name="author_name" field_parser_key="$1"/>
		<scalar name="date_and_location" field_parser_key="$3"/>
		<scalar name="medium" field_parser_key="$5"/>
		<scalar name="dimensions" field_parser_key="$6"/>
		<scalar name="museum_code" field_parser_key="$8"/>
	</composite>
	
	<!--  -->
	<scalar name="description" scalar_type="String" xpath="//comment()[.='Main Content Area']/following-sibling::tr[1]/td/p[1]"/>
	
	
	
	
	
	<!--  
	
	<scalar name="made_in" scalar_type="String" xpath="//form[@name='bookmarkobj']/p[1]/text()[3]"/>
	<scalar name="dimensions" scalar_type="String" xpath="//form[@name='bookmarkobj']/p[1]/text()[4]"/>
	<scalar name="catolog_address" scalar_type="String" xpath="//form[@name='bookmarkobj']/p[1]/text()[5]"/>
	-->

</meta_metadata>


<!-- 
The 'flamenco_object' serves as an individual piece in the museum, but also as a facet (or category).


 -->
<meta_metadata name="fondation_tag" extends="compound_document" parser="xpath">
	
	<selector url_stripped="http://www.fondation-langlois.org/html/e/research.php"/>
	<scalar name="title" xpath="//div[@class='contenus']/h1"/>
	<scalar name="pre_description" scalar_type="String"/>
	<scalar name="mid_description" scalar_type="String"/>
	<scalar name="post_description" scalar_type="String"/>
	<collection name="search_results" child_type="fondation_article" xpath="//div[@id='voirtout']/div/span">
		<scalar name="title" xpath="./a/text()"/>
		<scalar name="location" xpath="./a/@href"/>
	</collection>
</meta_metadata>

<meta_metadata name="fondation_article" extends="creative_work" parser="xpath">
	<selector url_path_tree="http://www.fondation-langlois.org/html/e/" domain="fondation-langlois.org"/> 	
	<!--  Consider replacing xpath logic with semantic actions once you learn those -->
	<scalar name="collection_name" scalar_type="String" xpath="//div[@id='breadcrumbs']/ul/li[(position() = 3) and (not(position()=last()))]/a/text()"/>
	<scalar name="title"  xpath="//div[@id='breadcrumbs']/ul/li[last()]"/>
	
	<scalar name="article_type" scalar_type="String" xpath="//div[@id='breadcrumbs']/ul/li[2]/a/text()"/>
	
	
	<!-- Because the website will change the headers I use to find the following information
		will change the header title based on whether or not there are multiple of an item,
		there are two collections/type of item. One will only include one of an item. -->
	
	<collection name="external_links" child_type="compound_document" xpath="//h2[child::text()='External links:']">
		<scalar name="title" xpath="./following-sibling::div[1]/strong"/>
		<scalar name="location" xpath="./following-sibling::div[1]/a/@href"/>
	</collection>
	<collection name="external_link" child_type="compound_document" xpath="//h2[child::text()='External link:']">
		<scalar name="title" xpath="./following-sibling::div[1]/strong"/>
		<scalar name="location" xpath="./following-sibling::div[1]/a/@href"/>
	</collection>
	
	<collection name="related_page" child_type="fondation_article" xpath="(//h2[child::text()='Related page: ']/following-sibling::div//img)">
		<scalar name="title" xpath="./../../span/a/text()"/>
		<scalar name="location" xpath="./../@href"/>
	</collection> 
		 
	<collection name="related_pages" child_type="fondation_article" xpath="(//h2[child::text()='Related pages: ']/following-sibling::div//img)">
		<scalar name="title" xpath="./../../span/a/text()"/>
		<scalar name="location" xpath="./../@href"/>
	</collection>

	<collection name="tags" child_type="fondation_tag" xpath="(//h2[child::text()='Tags:']/following-sibling::div)">
	
		<scalar name="title" xpath="./a/text()"/>
		<scalar name="pre_description" xpath="./a/text()" >
			<filter regex="^.*$" replace="http://www.fondation-langlois.org/html/e/research.php?Filtres=1&amp;MotsCles="/>
		</scalar>
		<scalar name="mid_description" xpath="./a/text()"  >
			<filter regex="\s" replace="+"/>
		</scalar>
		<scalar name="post_description" xpath="./a/text()">
			<filter regex=".*" replace="&amp;Numero=&amp;zoom=1&amp;Format=1"/>
		</scalar>
		
		
		<scalar name="location">
		    <concatenate_values>
		        <value from_scalar="pre_description" />
		        <value from_scalar="mid_description" /> 
		        <value from_scalar="post_description" />
		    </concatenate_values>
		</scalar>
		
		
		
	</collection>
	
	<collection name="index" child_type="fondation_article" xpath="//div[@id='bttexteslies']/ul/li/a">
		<scalar name="title" xpath="./text()"/>
		<scalar name="location" xpath="./@href"/>
	</collection>
	<collection name="footnotes" child_type="compound_document" xpath="//div[@id='editoFootNotes']/p">

		<scalar name="description" xpath="."/>
	</collection>
</meta_metadata>
 
 
<meta_metadata name="flamenco_object" extends="creative_work" parser="xpath">
    <selector url_path_tree="http://orange.sims.berkeley.edu/cgi-bin/flamenco.cgi/famuseum/" domain="orange.sims.berkely.edu"/>
	<example_url url="http://orange.sims.berkeley.edu/cgi-bin/flamenco.cgi/famuseum/Flamenco?q=objects:81&amp;group=objects&amp;index=15"/>
	<scalar name="title" xpath="//tr[@valign='top'][2]/td[2]" />
	<scalar name="description" xpath="//tr[@valign='top'][3]/td[2]"/>
	
	
	<scalar name="parent" scalar_type="String"/>
	<scalar name="category" scalar_type="String" xpath="//table[@class='termbox']//tr/td[1]/span[position() = last()]/span"/>
	
	<collection name="flamenco_objects" child_type="flamenco_object" xpath="(//table[@cellpadding='2'])[last()]/tbody/tr/td">
		<scalar name="title" xpath="./a/span"/>
		<scalar name="location" xpath="./a/@href"/>
	
	</collection>
	
	<collection name="sub_facets" child_type="flamenco_object" xpath="//td[@class='itemcolumn']//td[@class='facetbox']">
		<scalar name="title" xpath="./a/span"/>
		<scalar name="location" xpath="./a/@href"/>
	</collection>
	<!-- If the artist is unknown, this displays an (essentially) random facet. The Unknown artist is reported in the "specific_facets" collection -->
	<collection name="authors" label="authors" xpath="//tr[@valign='top'][4]/td[2]">
		<scalar name="title" xpath="./text()"/>
	</collection>
	<scalar name="media_type" scalar_type="String" xpath="//tr[@valign='top'][5]/td[2]"/>

	<collection name="general_facets" child_type="flamenco_object" xpath="//div[@class='endgame']/div/table/tbody/tr/td/form[2]/table/tbody//nobr/a">
		<scalar name="title" xpath="./span" label="facet_name"/>
		<scalar name="object_count" xpath="./../span/text()"/>
		<scalar name="location" xpath="./@href"/>
		<scalar name="category" xpath="./../../../../../../../preceding-sibling::tr[1]//span[@class='facet']"/>
	</collection>
	<collection name="specific_facets" child_type="flamenco_object" xpath="//div[@class='endgame']/div/table/tbody/tr//span[@class='sel']">
		<scalar name="title" xpath="./a/span/text()" label="facet_name"/>
		<scalar name="object_count" xpath="./span[@class='count']"/>
		<scalar name="category" xpath="./../../preceding-sibling::tr[1]/td[@class='valuebox']/span/span"/>
		<scalar name="location" xpath="./a/@href"/>
	</collection>
	
	
</meta_metadata>

</meta_metadata_repository>
